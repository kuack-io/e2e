{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests with Playwright, Cucumber, and Kubernetes integration",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "rm -rf allure-results && cucumber-js",
    "test:debug": "PWDEBUG=1 cucumber-js",
    "test:parallel": "cucumber-js --parallel ${CUCUMBER_WORKERS:-4}",
    "report:generate": "npx allure generate allure-results --output allure-report --clean",
    "report:open": "npx allure open allure-report",
    "report:serve": "npx allure serve allure-results",
    "clean": "rm -rf dist node_modules/.cache allure-results allure-report"
  },
  "keywords": [
    "kuack",
    "e2e",
    "cucumber",
    "bdd",
    "testing"
  ],
  "author": "Kuack Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@kubernetes/client-node": "1.4.0",
    "@playwright/test": "^1.57.0",
    "allure-cucumberjs": "^3.4.3",
    "allure-js-commons": "^3.4.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
